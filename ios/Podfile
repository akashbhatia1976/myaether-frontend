# ðŸ”’ Prevent React Native from auto-generating ReactCodegen podspec
ENV['RCT_NO_CODEGEN'] = '1'
ENV['DISABLE_CODEGEN'] = '1'

require_relative '../node_modules/react-native/scripts/react_native_pods'

platform :ios, '16.0'

target 'MedicalApp' do
  config = use_native_modules!

  # âœ… Set the env var just before use_react_native! (redundant but safe)
  ENV['DISABLE_CODEGEN'] = '1'

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => false,
    :fabric_enabled => false,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  ) # âœ… this parenthesis was missing

  # âœ… Use ONLY your manually maintained ReactCodegen
  pod 'ReactCodegen', :path => './react_codegen_fix', :modular_headers => true




  target 'MedicalAppTests' do
    inherit! :complete
    # Pods for testing
  end

  post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
        config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
        config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++20'
        config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
      end
    end
  end
end
